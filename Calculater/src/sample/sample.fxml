<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.PasswordField?>
<StackPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css" >
        <GridPane alignment="CENTER" vgap="10" styleClass="Calculator">
            <Label text="Calculator" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label fx:id="display" text="0" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <GridPane alignment="CENTER" hgap="5" vgap="5" GridPane.rowIndex="2" GridPane.columnIndex="0">
                <Button fx:id="c" onAction="#commandClick" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.columnSpan="1" text="C"/>
                <Button fx:id="del" onAction="#commandClick" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.columnSpan="1" text="Del"/>
                <Button fx:id="radical" onAction="#mathSignClick" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.columnSpan="1" text="√ "/>
                <Button fx:id="division" onAction="#mathSignClick" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.rowSpan="1" GridPane.columnSpan="1" text="÷"/>
                <Button fx:id="seven" onAction="#numClick" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.columnSpan="1" text="7"/>
                <Button fx:id="eight" onAction="#numClick" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.columnSpan="1" text="8"/>
                <Button fx:id="nine" onAction="#numClick" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.columnSpan="1" text="9"/>
                <Button fx:id="multiplication" onAction="#mathSignClick" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.columnSpan="1" text="×"/>
                <Button fx:id="four" onAction="#numClick" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnSpan="1" text="4"/>
                <Button fx:id="five" onAction="#numClick" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnSpan="1" text="5"/>
                <Button fx:id="six" onAction="#numClick" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnSpan="1" text="6"/>
                <Button fx:id="minus" GridPane.columnIndex="3" onAction="#mathSignClick" GridPane.rowIndex="2" GridPane.rowSpan="1" GridPane.columnSpan="1" text="-"/>
                <Button fx:id="one" onAction="#numClick" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.rowSpan="1" GridPane.columnSpan="1" text="1"/>
                <Button fx:id="two" onAction="#numClick" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.rowSpan="1" GridPane.columnSpan="1" text="2"/>
                <Button fx:id="three" onAction="#numClick" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.rowSpan="1" GridPane.columnSpan="1" text="3"/>
                <Button fx:id="plus" onAction="#mathSignClick" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.rowSpan="2" GridPane.columnSpan="1" text="+" style="-fx-pref-height: 65"/>
                <Button fx:id="zero" onAction="#numClick" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.columnSpan="1" text="0"/>
                <Button fx:id="dot" onAction="#numClick" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.columnSpan="1" text="."/>
                <Button fx:id="equals" onAction="#mathSignClick" GridPane.columnIndex="2" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.columnSpan="1" text="="/>
            </GridPane>
        </GridPane>
</StackPane>